{
  "manifest_version": 3,
  "name": "Right Click Opens Link in a Background Tab",
  "description": "Right clicking a link opens the link in a new background tab.",
  "version": "1.5",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "permissions": ["tabs", "declarativeNetRequest", "webNavigation", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "default_locale": "en"
}
