{
  "manifest_version": 3,
  "name": "Right Click Opens Link in a Background Tab",
  "description": "Right clicking a link opens the link in a new background tab.",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png",
    "512": "icons/512.png",
    "1167": "icons/1167.png"
  }
}
